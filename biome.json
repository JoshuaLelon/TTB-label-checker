{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite/core", "ultracite/next"],
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [":NODE:", ":PACKAGE:", ["@/*", "@/**"], ":PATH:"]
          }
        }
      }
    }
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "app/**/*",
      "components/**/*",
      "lib/**/*",
      "scripts/**/*",
      "*.{js,ts,tsx,jsx,json,mjs,cjs,md}",
      "!**/node_modules",
      "!**/.next",
      "!**/dist",
      "!**/out"
    ]
  },
  "linter": {
    "rules": {
      "recommended": true,
      "correctness": {
        "useExhaustiveDependencies": "error",
        "useHookAtTopLevel": "error",
        "noUnusedVariables": "error",
        "noUnusedImports": "error",
        "useJsxKeyInIterable": "error"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noSelfCompare": "error",
        "noArrayIndexKey": "warn",
        "noAssignInExpressions": "error",
        "noDoubleEquals": "error",
        "noThenProperty": "warn",
        "noConsole": "error"
      },
      "nursery": {
        "noFloatingPromises": "error",
        "noMisusedPromises": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtml": "error"
      },
      "style": {
        "useConst": "error",
        "useImportType": "error",
        "useNodejsImportProtocol": "error",
        "useFragmentSyntax": "warn",
        "useCollapsedIf": "warn",
        "useNamingConvention": {
          "level": "warn",
          "options": {
            "strictCase": false,
            "conventions": [
              {
                "selector": { "kind": "variable" },
                "formats": ["camelCase", "PascalCase", "CONSTANT_CASE"]
              },
              {
                "selector": { "kind": "function" },
                "formats": ["camelCase", "PascalCase", "CONSTANT_CASE"]
              },
              {
                "selector": { "kind": "objectLiteralProperty" },
                "formats": ["camelCase", "PascalCase", "snake_case"]
              },
              {
                "selector": { "kind": "typeProperty" },
                "formats": ["camelCase", "PascalCase", "snake_case"]
              },
              { "selector": { "kind": "typeLike" }, "formats": ["PascalCase"] }
            ]
          }
        }
      },
      "complexity": {
        "noForEach": "off",
        "noExcessiveCognitiveComplexity": "warn"
      },
      "performance": {
        "noDelete": "warn"
      },
      "a11y": {
        "noAutofocus": "error",
        "useButtonType": "error",
        "useKeyWithClickEvents": "warn",
        "useKeyWithMouseEvents": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "trailingCommas": "es5",
      "semicolons": "always",
      "arrowParentheses": "always"
    },
    "globals": ["window", "document", "console"]
  },
  "overrides": [
    {
      "includes": ["scripts/**"],
      "linter": { "rules": { "suspicious": { "noConsole": "off" } } }
    },
    {
      "includes": ["lib/logger.ts"],
      "linter": { "rules": { "suspicious": { "noConsole": "off" } } }
    },
    {
      "includes": ["**/*.config.{js,ts,mjs}", "next.config.*"],
      "linter": {
        "rules": {
          "suspicious": { "noExplicitAny": "off" },
          "style": { "useNamingConvention": "off" }
        }
      }
    }
  ]
}
